{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": ["airbnb-base", "prettier"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "class-methods-use-this": "off",
        "no-unused-vars": ["error", { "varsIgnorePattern": "fg" }],
        "no-plusplus": [0],
        "no-await-in-loop": [0]
    }
}
